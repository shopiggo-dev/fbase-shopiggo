
{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "location": "us-central1"
    }
  ],
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "id": "nextn",
      "region": "us-central1",
      "requiredAPIs": [
        {
          "api": "cloudfunctions.googleapis.com",
          "reason": "Serves backend logic for the app"
        }
      ],
      "dependencies": {
        "functions": [
          "default"
        ]
      }
    }
  }
}
