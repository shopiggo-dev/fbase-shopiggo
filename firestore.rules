
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all to secure collections by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access for promotions
    match /promotions-cj-linksearch-clean/{docId} {
      allow read: if true;
    }

    // Users can read/update their own document, and any authenticated user can create one.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Email verifications collection should be accessible for the sign-up flow.
    // In a production environment, you might want to tighten these rules.
    match /emailVerifications/{docId} {
        allow read, write, delete: if true; 
    }

    // Allow authenticated users to trigger emails by creating documents in the 'mail' collection.
    match /mail/{docId} {
        allow create: if request.auth.uid != null;
    }
  }
}
